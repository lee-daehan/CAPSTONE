<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
  <title>순풋</title>
</head>
<style>
  .container {
    display: grid;
    grid-template-columns: auto;
    place-items: center;
  }
  .wrap-form {
    margin: 40px 20px;
    border: 1px solid #ced4da;
    border-radius: 5px;
    width: 600px;
  }
  form {
    width: 300px;
    margin: 0 auto;
  }

  form ul {
    display: grid;
    grid-template-columns: auto auto;
    margin: 0;
    padding: 0;
  }

  form ul li {
    list-style: none;
    text-decoration: none;
  }

  #gender {
    height: 50px;
  }

  .select {
    display: grid;
    grid-template-columns: auto auto;
    padding: 0;
    height: 100%;
  }

  .select input[type=radio] {
    display: none;
  }

  .select input[type=radio]+label {
    display: inline-block;
    cursor: pointer;
    border: 1px solid #ced4da;
    line-height: 24px;
    text-align: center;
    font-weight: bold;
    font-size: 13px;
  }

  .select input[type=radio]+label {
    background-color: #fff;
    color: #ced4da;
    font-size: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 3px;
  }

  .select input[type=radio]:checked+label {
    border: 1px solid #5da034;
    color: #5da034
  }

  .genderlabel {
    margin: 0;
  }
  .submitButton {
    margin: 20px 0;
  }
</style>

<body>
  <%- include('nav.html') %>
  <div class="container">
    <div class="wrap-form">
      <form action="/register" method="POST">
        <label for="id" class="form-label"></label>
        <input type="text" id="id" class="form-control" name="id" placeholder="아이디" required>
        <label for="pw" class="form-label"></label>
        <input type="password" id="pw" class="form-control" name="pw" placeholder="비밀번호(*최소4자리 ~ 최대 15자리)" minlength="4" maxlength="15" required>
        <label for="name" class="form-label"></label>
        <input type="text" id="name" class="form-control" name="name" placeholder="이름" required>
        <label for="department" class="form-label"></label>
        <input type="text" id="department" class="form-control" name="department" placeholder="소속학과">
        <label for="birthdate" class="form-label"></label>
        <input type="text" id="birthdate" class="form-control" name="birthdate" placeholder="생년월일 8자리" required>
        <div class="form-control" id="gender">
          <div class="select">
            <input type="radio" name="identityGender" id="select" value="남성"><label class="genderlabel" for="select" required>남자</label>
            <input type="radio" name="identityGender" id="select2" value="여성"><label class="genderlabel" for="select2">여자</label>
          </div>
        </div>
        <div class="submitButton">
        <button id="register" type="submit" class="btn btn-outline-dark">회원가입</button>
        <a href="/login" class="btn btn-outline-primary">뒤로</a>
        </div>
      </form>
    </div>
  </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
      integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
      crossorigin="anonymous"></script>
