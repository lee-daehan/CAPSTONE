      padding: 3px;
    }

    .btn_complete {
      width: 120px;
      height: 30px;
      border: 0;
      background-color: #5da034;
      font-size: 18px;
      font-weight: bold;
      color: white;
      border-radius: 10px;
      padding: 3px;
    }

    /* #score {
      display: flex;
      justify-content: flex-end;
      margin: 10px;
    } */
