    }

    .recommand-container {
      margin: 10px;
      border: 1px solid #ced4da;
      border-radius: 10px;
      box-shadow: 0 0 3px 0 rgb(172, 170, 170);
    }

    .recommand-title {
      margin: 20px 10px;
      font-size: 20px;
      font-weight: bold;
    }


    .select {
      padding: 0;
      height: 100%;
    }

    .select-container {
      display: grid;
      grid-template-columns: 3fr 3fr 3fr 1fr;
      grid-gap: 20px;
      margin: 20px 10px;
      position: relative;
    }

    .select input[type=radio] {
      display: none;
    }

    .select input[type=radio]+label {
      display: inline-block;
      cursor: pointer;
      border: 1px solid #8f9194;
      box-shadow: 0 0 3px 0 rgb(172, 170, 170);
      line-height: 24px;
      text-align: center;
      font-weight: bold;
      font-size: 13px;
    }

    .select input[type=radio]+label {
      background-color: #fff;
