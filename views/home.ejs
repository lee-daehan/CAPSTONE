    }

    .menuname {
      margin-top: 10px;
    }

    main {
      width: 100%;
      margin: 0 auto;
    }

    .container1 {
      display: grid;
      grid-template-columns: 1fr 2fr;
      grid-gap: 10px;
      margin: 10px;
    }

    .list-container {
