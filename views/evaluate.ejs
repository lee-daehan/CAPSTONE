    .title {
      color: #5da034;
      font-weight: bold;
      margin-bottom: 10px;
    }
    .list-wrap {
      padding: 20px;
    }
    .score_button a{
      text-decoration: none;
      color: black;
      font-size: 16px;
    }
  }
