    <!-- NavBar -->
    <%- include('nav.html') %>
    <main id="main">
        <div id="container">
            <div id="profileBox">
                <div id="userName">
                <span id="user_id"><%= user.id %></span><br><br>
                <span id="user_name"><%= user.name %> /</span>
                <span id="user_department"><%= user.department %></span>
                </div>

                <div id="profileBtn">
                <button type="button" onclick="location.href='/inputprofile'">프로필 설정</button>
                <button type="button" onclick="location.href='/myprofile'">프로필 보기</button>
