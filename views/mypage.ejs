    <title>순풋</title>
    <style>
        @media screen and (min-width:481px) {
            * {
                height: 100%;
            }
            #main {
                height: 80%;
            }
            #container {
                width: 80%;
                height: 90%;
                margin: 50px auto;
                display: grid;
                grid-template-columns: 1fr 2fr;
                grid-gap: 20px;
            }
            #profileBox {
                border: 1px solid #ced4da;
                border-radius: 10px;
                box-shadow: 0 0 3px 0 rgb(172, 170, 170);
                display: grid;
                grid-template-rows: 1fr 3fr 2fr;
                grid-gap: 10px;
            }
            #userName {
                padding: 10px;
            }
            #user_id{
                font-size: 24px;
                font-weight: bold;
            }
            #user_name {
                color: #727F88;
            }
            #user_department {
                color: #727F88;
            }
            #profileBtn {
                display: grid;
                grid-template-rows: 1fr 1fr 1fr;
                grid-gap: 10px;
                padding: 10px;
            }
            #profileBtn button{
                border-radius: 10px;
                background-color: #8bc269;
                border: 0;
                font-weight: bold;
            }
            #userScore {
                height: 30%;
                border-radius: 10px;
                background-color: #8bc269;
                border: 0;
                margin: 10px;
                padding: 10px;
                font-weight: bold;
            }
            #menuBox ul {
                display: grid;
                grid-template-rows: auto auto auto auto auto auto;
                border: 1px solid #ced4da;
                border-radius: 10px;
                box-shadow: 0 0 3px 0 rgb(172, 170, 170);
                margin: 0;
                padding: 20px;
            }
            #menuBox ul li {
                list-style: none;
            }
            #item {
                display: flex;
                align-items: center;
            }
            #item span{
                display: flex;
                align-items: center;
            }
            #menuBox li img {
                width: 30px;
                height: 30px;
                margin: 0 10px;
            }
            
        }
