  <title>순풋</title>
  <style>
    .list-container {
      height: 850px;
      border: 1px solid #ced4da;
      color: #838589;
      border-radius: 10px;
      box-shadow: 0 0 3px 0 rgb(172, 170, 170);
      /* display: flex; */
      justify-content: center;
      align-items: center;
      font-size: 20px;
      overflow-y: scroll;
      margin: 40px 20px;
    }

    .list-item {
      display: flex;
      justify-content: space-between;
      border: 1px solid #ced4da;
      color: #838589;
      border-radius: 10px;
      box-shadow: 0 0 3px 0 rgb(172, 170, 170);
      margin: 10px 10px;
      padding: 10px;
    }
    .list-wrap {
      display: grid;
      grid-template-rows: 1fr 1fr;
      grid-gap: 10px;
      border: 1px solid #ced4da;
      color: #838589;
      border-radius: 10px;
      box-shadow: 0 0 3px 0 rgb(172, 170, 170);
      margin: 10px 10px;
      padding: 10px;

    }
    .list-item-success{
      display: flex;
      justify-content: space-between;

    }
    .title {
      color: black;
      font-weight: bold;
    }

    .content {
      color: black;
    }

    .detail {
      font-size: 16px;
      color: #545658;
    }

    .btn_wait {
      width: 120px;
      height: 30px;
      border: 0;
      background-color: rgb(66, 66, 236);
      font-size: 18px;
      font-weight: bold;
      color: white;
      border-radius: 10px;
      padding: 3px;
    }

    .btn_fail {
      width: 120px;
      height: 30px;
      border: 0;
      background-color: red;
      font-size: 18px;
      font-weight: bold;
      color: white;
      border-radius: 10px;
      padding: 3px;
    }

    .btn_complete {
      width: 120px;
      height: 30px;
      border: 0;
      background-color: #5da034;
      font-size: 18px;
      font-weight: bold;
      color: white;
      border-radius: 10px;
      padding: 3px;
    }
    .score_button {
      width: fit-content;
      height: fit-content;
      border: 1px solid #ced4da;
      padding: 10px;
      background-color: white;
      font-size: 15px;
    }

    #star {
      display: flex;
    }

    .star {
      font-size: 2rem;
      margin: 10px 0;
      cursor: pointer;
    }

    .star:not(.on) {
      color: #ccc;
    }

    .star.on {
      color: orange;
    }

    footer {
      width: 100%;
      height: 300px;
      margin: 0 auto;
      background-color: #282B33;
    }
  </style>
</head>

