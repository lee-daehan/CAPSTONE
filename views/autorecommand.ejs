      grid-area: main;
      display: grid;
      grid-template-rows: auto auto;
      grid-gap: 10px;
    }
    #footer {
      grid-area: footer;
    }

    #body {
      display: grid;
      gap: 10px;
      grid-template-rows: 1fr;
