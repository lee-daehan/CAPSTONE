<style>
  @media screen and (max-width: 480px) {
    #header {
      grid-area: header;
    }

    #main {
      grid-area: main;
      display: grid;
      grid-template-rows: auto auto;
      grid-gap: 10px;
    }

    #footer {
      grid-area: footer;
    }

    #body {
      display: grid;
      gap: 10px;
      grid-template-rows: 1fr;
      grid-template-areas:
        'header'
        'main'
        'footer';
    }

    #nav {
      width: 100%;
    }

    #menubar {
      width: 100%;
    }

    .menubar {
      display: grid;
      grid-template-rows: auto auto auto;
      align-items: center;
      margin: 10px 0;
    }

    .menubar a {
      text-decoration: none;
      color: black;
      font-weight: bold;
      margin: 0 200px;
      display: grid;
      grid-template-rows: auto auto;
      place-items: center;
    }

    .menubar img {
      width: 50px;
      height: 50px;
    }

    #container1 {
      display: grid;
      grid-template-rows: auto auto;
      justify-content: center;
      grid-gap: 10px;
      width: 100%;
    }

    .list-container {
      width: 100%;
      height: fit-content;
      color: #838589;
      border: 1px solid #ced4da;
      border-radius: 10px;
      box-shadow: 0 0 3px 0 rgb(172, 170, 170);
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 20px;
    }

    .list-container p {
      font-size: 16px;
      margin: 0;
      padding: 5px 0;
    }


    .menu {
      display: grid;
      grid-template-columns: 1fr;
    }

    .recommand-container {
      width: 90%;
      display: grid;
      grid-template-rows: auto auto;
      border: 1px solid #ced4da;
      border-radius: 10px;
      box-shadow: 0 0 3px 0 rgb(172, 170, 170);
      margin: 0 auto;
    }

    .recommand-title {
      display: grid;
      place-content: center;
    }

    .recommand-title span {
      font-size: 20px;
      font-weight: bold;
    }

    .select {
      padding: 7px;
    }

    .select-container {
      display: grid;
      grid-template-rows: auto auto auto auto;
      grid-gap: 20px;
      margin: 20px 10px;
      position: relative;
    }

    .select input[type=radio] {
      display: none;
    }

    .select input[type=radio]+label {
      display: inline-block;
      cursor: pointer;
      border: 1px solid #8f9194;
      box-shadow: 0 0 3px 0 rgb(172, 170, 170);
      line-height: 24px;
      text-align: center;
      font-weight: bold;
      font-size: 13px;
    }

    .select input[type=radio]+label {
      background-color: #fff;
      color: #a8aaac;
      font-size: 14px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 3px;
    }

    .select input[type=radio]:checked+label {
      border: 1px solid #5da034;
      color: #5da034
    }

    .genderlabel {
      margin: 0;
    }

    .submitButton {
      margin: 20px 0;
    }

    .sub_title {
      display: grid;
      grid-template-columns: 1fr 5fr;
    }

    .sub_title span {
      display: grid;
      justify-content: flex-start;
      align-items: last baseline;
      font-size: 18px;
      font-weight: bold;
    }

    .sub_title img {
      width: 50px;
      height: 50px;
    }

    .radio-container-gender {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }

    .radio-container-position {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr;
    }

    .radio-container-foot {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
