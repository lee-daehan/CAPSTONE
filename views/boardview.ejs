<body>
  <header id="header">
    <%- include('nav.html') %>
      <div class="menubar" id="menubar">
        <a href="/board">
          <img src="public/imgs/ball.png" alt="전체 매치">
          <p class="menuname">전체 매치</p>
        </a>
        <a href="/selDate">
          <img src="public/imgs/write.png" alt="매치등록">
          <p class="menuname">매치 등록</p>
        </a>
        <a href="/">
          <img src="public/imgs/notification.png" alt="공지사항">
          <p class="menuname">공지사항</p>
        </a>
      </div>
    </header>
    <hr style="height: 1px; background: #ccc;">

<main>
    <div id="main-title">  등록한 매치 </div>
    <div class="list-container">
        <% if(writer ==null) { %>
          <div class="title">
            <div class="content">
              <div class="detail"><p style="margin: auto auto;">작성한 게시글이 없습니다.</p></div>
            </div>
          </div>
          <% } %>

    <% if( writer !=null) { %>
        <% for (var i=0; i < allpost.length; i++ ) { %>
          <% if(writer.작성자===allpost[i].작성자) { %>
          <div class="list-item">
            <div class="item1">
              <div class="title"><%= allpost[i].제목 %></div>
              <div class="content"><%= allpost[i].게시글 %></div>
              <div class="detail">
                <span><%= allpost[i].경기진행날짜 %> /</span>
                <span><%= allpost[i].경기진행시간 %></span><br>
                <span><%= allpost[i].장소 %> /</span>
                <span><%= allpost[i].인원 %> /</span>
                <span>남은인원: <%= allpost[i].count %></span>
              </div>
            </div>

            <div id="editBtn">
              <button class="delete" data-id="<%= allpost[i]._id %>">삭제</button>
              <button onclick="location.href='/editboard/<%= allpost[i]._id %>'">수정</button>
            </div>
          </div>
          <% } %>
        <% } %>
      <% } %>
      </div>
    </div>
</main>

<footer>

</footer>
      <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>

      <script>
        $('.delete').click(function (e) {
          var postNum = e.target.dataset.id; //지금 클릭한것
          var nowClick = $(this); // 지금 이벤트가 동작하는 곳
          var conf = confirm("등록한 매치를 삭제 하시겠습니까?");
          if( conf == true ) {
            $.ajax({
              method: 'DELETE',
              url: '/delete',
              data: { _id: postNum }
            }).done(function (result) {
                alert("게시물이 삭제되었습니다.");
                nowClick.parent().parent(".list-item").css("display", "hidden"); //지금 누른곳의 부모태그중 li를 서서히 사라지게함
                location.reload();
            }).fail(function (xhr, textStatus, errorThrow) {
              console.log(xhr, textStatus, errorThrow);
            });
          }
        })
      </script>

