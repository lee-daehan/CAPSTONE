<body style="margin: 0; padding: 0;">
    <header id="header">
        <%- include('nav.html') %>
        <div class="menubar" id="menubar">
            <a href="/board">
                <img src="public/imgs/ball.png" alt="전체 매치">
                <p class="menuname">전체 매치</p>
            </a>
            <a href="/selDate">
                <img src="public/imgs/write.png" alt="매치등록">
                <p class="menuname">매치 등록</p>
            </a>
            <a href="/">
                <img src="public/imgs/notification.png" alt="공지사항">
                <p class="menuname">공지사항</p>
            </a>
        </div>
    </header>
    <hr style="height: 1px; background: #ccc;">

    <main>
            <div class="head_box">
                <h2>초대한 유저 목록</h2>
            </div>
        <div id="main-container">
            <div id="listhead">
                <div id="titleBox1"><span>닉네임</span></div>
                <div id="titleBox2" style="display: flex; justify-content: flex-start;"><span>초대한 매치정보</span></div>
                <div id="titleBox3"><span>매칭상태</span></div>
            </div>
            <hr style="height: 1px; background: #ccc;">
            <%  if(personlist.length == 0){%>
                <div>
                    <div class="main_info" style="font-weight: bold; margin: auto auto;">
                        <span style="display: inline-block; margin: auto auto; align-items: center; justify-content: center;">초대한 유저가 없습니다.</span>
                    </div>
                </div>
                <%  } %>
            <%  if(personlist != 0){%>
                <div class="box_line">
                    <% for (var i=0; i < personlist.length ; i++ ) { %>
                    <div class="info_box">
                        <div class="main_info" style="font-weight: bold;">
                            <span><%= personlist[i].초대받은사람 %></span>
                        </div>
                        <div id="art_detail">
                            <div>
                                <span style="font-weight: bold;"><%= personlist[i].제목 %></span>
                            </div>
                            <div id="detail_info">
                                <span><%= personlist[i].경기진행날짜 %> /</span>
                                <span><%= personlist[i].경기진행시간 %></span><br>
                            </div>
                            <div id="detail_info">
                                <span><%= personlist[i].장소 %> /</span>
                                <span><%= personlist[i].인원 %> /</span>
                                <span>남은자리: <%= personlist[i].남은인원 %>명</span>
                            </div>
                        </div>
                        <div class="btn_box" style="margin: auto auto;">
                            <% if(personlist[i].여부==0){ %>
                            <span class="wait">매칭대기중</span><br>
                            <button id="cancelTag" onClick="alert('취소되었습니다.')" type="submit" class="cancel" value="취소" data-sender="<%= personlist[i].초대한사람 %>" data-articlenum="<%= personlist[i].게시글번호 %>" data-reciever="<%= personlist[i].초대받은사람 %>">취소</button>
                             <% } %>
                            <% if(personlist[i].여부==1){ %>
                            <span class="complete">매칭완료</span>
                            <% } %>
                            <% if(personlist[i].여부==2){ %>
                            <span class="fail">매칭실패</span>
                             <% } %>
                        </div>
                    </div>
                    <% } %>
                </div>
           <%  }%>
        </div>


    </main>
  <footer id="footer">
    footer
  </footer>
