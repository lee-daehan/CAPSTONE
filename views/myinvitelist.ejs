        //초대 취소하기
        $('.cancel').click(function (e) {
            var sender = e.target.dataset.sender; //지금 클릭한것
            var reciever = e.target.dataset.reciever;
            var articlenum = e.target.dataset.articlenum;
            console.log(articlenum);
          
              $.ajax({
                method: 'POST',
                url: '/cancelinvite',
                data: { sender: sender, reciever: reciever, articlenum: articlenum }
              }).done(function (result) {
                  console.log('성공')
              }).fail(function (xhr, textStatus, errorThrow) {
                //요청 실패시
                console.log(xhr, textStatus, errorThrow);
              });
        })


